<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="calcPelitaOutstandingService">

<resultMap type="java.util.HashMap" id="getPelitaOutstandingByTenantId-map" >
<result property="id" column="id" javaType="java.lang.Integer"/>
<result property="invoice_amount" column="invoice_amount" javaType="java.lang.Double"/>
<result property="gst" column="gst" javaType="java.lang.Double"/>
</resultMap>

<select id="getPelitaOutstandingByTenantId" resultMap="getPelitaOutstandingByTenantId-map">

select id, invoice_amount, gst from  invoices where tenant_id = #{tenant_id}

</select>

<update id="updatePelitaOutstanding">

update invoices set invoice_outstanding = coalesce((#{invoice_amount} - #{gst}), 0.0) where id = #{id}
</update>

</mapper>